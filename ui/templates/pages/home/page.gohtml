{{- /*gotype: github.com/myrjola/sheerluck/cmd/web.homeTemplateData*/ -}}

{{ define "page" }}
    <div>
        <style {{ nonce }}>
            @scope {
                :scope {
                    position: relative;
                    isolation: isolate;
                    overflow: hidden;
                    min-height: 100%;
                    padding-top: var(--size-8);
                    align-content: center;
                }
            }
        </style>
        {{ template "backdrop-blur-top" }}
        <div>
            <style {{ nonce }}>
                @scope {
                    :scope {
                        padding-top: var(--size-8);
                        padding-bottom: var(--size-8);

                        @container style(--sm: true) {
                            padding-top: var(--size-11);
                            padding-bottom: var(--size-11);
                        }

                        @container style(--lg: true) {
                            padding-bottom: var(--size-12);
                        }

                        > div {
                            margin-left: auto;
                            margin-right: auto;
                            max-width: 50rem;
                            padding-left: var(--size-5);
                            padding-right: var(--size-5);

                            @container style(--lg: true) {
                                padding-left: var(--size-7);
                                padding-right: var(--size-7);
                            }
                        }
                    }
                }
            </style>
            <div>
                <div>
                    <style {{nonce}}>
                        @scope {
                            :scope {
                                display: flex;
                                flex-direction: column;
                                gap: var(--size-5);
                                text-align: center;

                                @container style(--sm: true) {
                                    gap: var(--size-7);
                                }

                                > img {
                                    margin-left: auto;
                                    margin-right: auto;
                                    aspect-ratio: 1;
                                    height: var(--size-12);

                                    @container style(--sm: true) {
                                        height: var(--size-13);
                                    }
                                }

                                > h1 {
                                    font-size: var(--font-size-5);
                                    font-weight: var(--font-weight-4);
                                    letter-spacing: var(--font-letterspacing-1);

                                    @container style(--sm: true) {
                                        font-size: var(--font-size-8);
                                    }
                                }

                                > p {
                                    font-size: var(--font-size-3);
                                    line-height: var(--font-lineheight-3);
                                    color: var(--gray-2);
                                }
                            }
                        }
                    </style>
                    <img src="/logo.svg" alt="Four-leaf clover inside a magnifying glass" />
                    <h1>
                        Sheerluck
                    </h1>
                    <p>
                        Question suspects and investigate crime scenes to solve the case.
                        Your first case is “The Murders in the Rue Morgue” by Edgar Allan Poe.
                    </p>
                    <div>
                        <style {{ nonce }}>
                            @scope {
                                :scope {
                                    display: flex;
                                    justify-content: center;
                                    gap: var(--size-4);
                                }
                            }
                        </style>
                        {{ if .BaseTemplateData.Authenticated }}
                            <form action="/api/logout" method="post">
                                {{ csrf }}
                                <button type="submit">
                                    <span>Log out</span>
                                </button>
                            </form>
                        {{ else }}
                            <form method="post" action="/api/login/start">
                                {{ csrf }}
                                <button type="submit">Sign in</button>
                                <script {{ nonce }}>
                                  (async (form = me()) => {
                                    const { loginUser } = await import("webauthn")
                                    form.addEventListener("submit", loginUser)
                                  })()
                                </script>
                            </form>
                            <form action="/api/registration/start">
                                {{ csrf }}
                                <button type="submit">Register</button>
                                <script {{ nonce }}>
                                  (async (form = me()) => {
                                    const { registerUser } = await import("webauthn")
                                    form.addEventListener("submit", registerUser)
                                  })()
                                </script>
                            </form>
                        {{ end }}
                    </div>
                    {{ if .BaseTemplateData.Authenticated }}
                        {{ template "case-card" }}
                    {{ end }}
                </div>
            </div>
        </div>
        {{ template "backdrop-blur-bottom" }}
    </div>
{{ end }}

